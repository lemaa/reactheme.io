{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
        "@Element/*": ["src/components/elements/*"],
        "@Layout/*": ["src/components/layouts/*"],
        "@Module/*": ["src/components/modules/*"],
        "@Template/*": ["src/components/templates/*"],
        "@Constant/*": ["src/constants/*"],
        "@Context/*": ["src/context/*"],
        "@Hook/*": ["src/hooks/*"],
        "@Util/*": ["src/utils/*"],
        "@Style/*": ["src/styles/*"],
        "@CustomType/*": ["src/types/*"],
        "@Pages/*": ["pages/*"],
     },
    "typeRoots": [ "src/types/customTypes", "node_modules/@types"]

  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "src/types/customTypes",
    "dist",
    ".next",
    "out",
    "next.config.js",
    "commitlint.config.js",
    "jest.setup.js",
    "jest.config.js",
    ".babelrc"
  ]
}

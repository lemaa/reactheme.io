{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
        "@element/*": ["src/components/elements/*"],
        "@layout/*": ["src/components/layouts/*"],
        "@module/*": ["src/components/modules/*"],
        "@template/*": ["src/components/templates/*"],
        "@constant/*": ["src/constants/*"],
        "@context/*": ["src/context/*"],
        "@hook/*": ["src/hooks/*"],
        "@util/*": ["src/utils/*"],
        "@style/*": ["src/styles/*"],
        "@customType/*": ["src/types/*"],
     },
    "typeRoots": [ "src/types", "node_modules/@types"]

  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "src/types"
  ]
}
